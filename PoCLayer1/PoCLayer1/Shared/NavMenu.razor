            </div>
        </AuthorizeView>
        
        <AuthorizeView Roles = "Admin, Manager">
            
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="AddEmployee">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Create employee
                </NavLink>
            </div>
        </AuthorizeView>
        
        <AuthorizeView Roles="Manager, Admin">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="AddShift">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Add Shift
                </NavLink>
            </div>
        </AuthorizeView>
        
        <AuthorizeView Roles="Manager, Admin">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="Shifts">
                    <span class="oi oi-list-rich" aria-hidden="true"></span> Shifts
                </NavLink>
            </div>
        </AuthorizeView>

    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}